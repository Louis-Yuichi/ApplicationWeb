{% extends "template.html.twig" %}

{% block title %}Poursuite études{% endblock %}

{% block css %}
    <link rel="stylesheet" href="assets/css/scodoc.css">
{% endblock %}

{% block body %}
    <h2 class="mb-0 text-center page-title">Poursuite études</h2>

    <div class="table-section">
        <!-- Premier tableau -->
        <div class="table-container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center">
                    <select class="form-select me-2" id="nomEtudiant">
                        <option selected>nomEtudiant</option>
                    </select>
                </div>
                <select class="form-select ms-2" style="width: auto;" id="annee">
                    <option selected>2023</option>
                </select>
            </div>
            <!-- Premier tableau -->
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr class="header-row">
                            <th>etudid</th>
                            <th>code_nip</th>
                            <th>Rg</th>
                            <th>Nom</th>
                            <th>Civ.</th>
                            <th>Nom</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Lignes à remplir dynamiquement -->
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Deuxième tableau -->
        <div class="table-container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex align-items-center">
                    <select class="form-select me-2" id="nomEtudiant2">
                        <option selected>nomEtudiant</option>
                    </select>
                </div>
                <select class="form-select ms-2" style="width: auto;" id="annee2">
                    <option selected>2023</option>
                </select>
            </div>
            <div class="table-responsive">
                <!-- Copie du premier tableau -->
                <table class="table table-bordered">
                    <thead>
                        <tr class="header-row">
                            <th>etudid</th>
                            <th>code_nip</th>
                            <th>Rg</th>
                            <th>Nom</th>
                            <th>Civ.</th>
                            <th>Nom</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Lignes à remplir dynamiquement -->
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Boutons de modification -->
    <div class="text-center mt-3">
        <button class="btn btn-primary" id="btnModifier">Modifier</button>
        <div class="btn-group d-none" id="btnGroup">
            <button class="btn btn-danger" id="btnAnnuler">Annuler</button>
            <button class="btn btn-success" id="btnValider">Valider</button>
        </div>
    </div>

    <!-- Menu flottant réorganisé -->
    <div class="floating-btn" id="floatingBtn">
        <i class="fas fa-file-export"></i>
    </div>
    <div class="floating-menu" id="floatingMenu">
        <!-- Option d'import -->
        <a href="#" class="menu-item" data-action="import">
            <i class="fas fa-file-import"></i>
            Importer
        </a>
        <!-- Séparateur -->
        <div class="menu-separator"></div>
        <!-- Options d'export -->
        <a href="#" class="menu-item" data-format="pdf">
            <i class="fas fa-file-pdf"></i>
            Export PDF
        </a>
        <a href="#" class="menu-item" data-format="word">
            <i class="fas fa-file-word"></i>
            Export Word
        </a>
        <a href="#" class="menu-item" data-format="html">
            <i class="fas fa-file-code"></i>
            Export HTML
        </a>
    </div>
{% endblock %}

{% block javascript %}
    <script src="assets/js/scodoc.js"></script>
{% endblock %}