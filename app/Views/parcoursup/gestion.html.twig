{% extends 'template.html.twig' %}

{% block css %}
<style>
    body {
        padding-bottom: 120px;
    }
    
    .table-container {
        max-height: calc(100vh - 460px);
        overflow-y: auto;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        margin-bottom: 2rem;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    
    .table-responsive {
        margin: 0;
    }
    
    table {
        table-layout: auto !important;
        width: 100%;
        white-space: nowrap;
        margin-bottom: 0 !important;
    }
    
    thead {
        position: sticky;
        top: 0;
        z-index: 1;
    }
    
    .table-dark th {
        background-color: #212529;
    }
    
    tbody tr:last-child td {
        border-bottom: 0;
    }
</style>
{% endblock %}

{% block javascript %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const anneeSelect = document.querySelector('select[name="annee"]');
    
    // Auto-redirection vers l'année actuelle si aucune année n'est sélectionnée
    if (anneeSelect && !anneeSelect.value && !window.location.search.includes('annee=')) {
        const anneeActuelle = new Date().getFullYear();
        const anneeDefaut = anneeActuelle + '/' + (anneeActuelle + 1);
        window.location.href = '/gestionParcourSup?annee=' + encodeURIComponent(anneeDefaut);
        return;
    }
    
    // Gérer le changement d'année
    if (anneeSelect) {
        anneeSelect.addEventListener('change', function() {
            if (this.value) {
                window.location.href = '/gestionParcourSup?annee=' + encodeURIComponent(this.value);
            }
        });
    }
    
    // Fonction de recherche (si on a des candidats affichés)
    const tableBody = document.querySelector('tbody');
    if (tableBody && searchInput) {
        const rows = Array.from(tableBody.querySelectorAll('tr'));
        
        searchInput.addEventListener('input', function() {
            const searchValue = this.value.toLowerCase();
            
            rows.forEach(row => {
                const numCandidat = row.querySelector('td')?.textContent.toLowerCase() || '';
                
                if (searchValue === '' || numCandidat.includes(searchValue)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });

            // Si aucun résultat, affiche un message
            const visibleRows = rows.filter(row => row.style.display !== 'none');
            if (visibleRows.length === 0 && searchValue !== '') {
                if (!document.getElementById('noResults')) {
                    const noResults = document.createElement('tr');
                    noResults.id = 'noResults';
                    noResults.innerHTML = `<td colspan="${rows[0]?.cells.length || 1}" class="text-center">Aucun candidat trouvé</td>`;
                    tableBody.appendChild(noResults);
                }
            } else {
                const noResults = document.getElementById('noResults');
                if (noResults) noResults.remove();
            }
        });
    }
});
</script>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <img class="mb-4 d-block mx-auto" style="height:50px;" src="assets/images/parcoursup.png" alt="Importer" class="img-fluid">

    <!-- Barre de recherche + filtre année -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="input-group" style="max-width: 300px;">
            <input type="text" 
                id="searchInput" 
                class="form-control" 
                placeholder="Numéro du candidat" 
                aria-label="Rechercher"
                oninput="this.value = this.value.replace(/[^0-9]/g, '')">
            <button class="btn btn-outline-secondary" type="button">
                <i class="fas fa-search"></i>
            </button>
        </div>
        
        <!-- Select d'année fonctionnel -->
        {% set annee_actuelle = "now"|date("Y") %}
        <form method="GET" class="d-inline">
            <select class="form-select" style="width: auto;" name="annee" required>
                <option value="">Choisissez une année</option>
                {% for i in 0..20 %}
                    {% set debut = annee_actuelle + i %}
                    {% set fin = debut + 1 %}
                    {% set valeur_annee = debut ~ "/" ~ fin %}
                    <option value="{{ valeur_annee }}" 
                        {% if anneeSelectionnee == valeur_annee %}selected{% endif %}>
                        {{ debut }}/{{ fin }}
                    </option>
                {% endfor %}
            </select>
        </form>
    </div>

    <!-- Tableau des candidats -->
    <div class="table-container">
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        {% for group, fields in columns %}
                            {% for field in fields %}
                                <th>{{ field|replace({'_': ' '})|title }}</th>
                            {% endfor %}
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for candidat in candidats %}
                        <tr>
                            {% for group, fields in columns %}
                                {% for field in fields %}
                                    <td>{{ attribute(candidat, field)|default('') }}</td>
                                {% endfor %}
                            {% endfor %}
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="{{ columns|reduce((carry, fields) => carry + fields|length, 0) }}">
                                {% if anneeSelectionnee %}
                                    Aucun candidat trouvé pour l'année {{ anneeSelectionnee }}
                                {% else %}
                                    Sélectionnez une année pour afficher les candidats
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Boutons -->
    <div class="d-flex justify-content-center mt-4">
        <a href="/filtres" class="btn btn-success mx-2">
            <i class="fas fa-filter"></i> Gérer les filtres
        </a>
        <button class="btn btn-primary mx-2">
            <i class="fas fa-calculator"></i> Calculer les résultats
        </button>
        <button class="btn btn-primary mx-2">
            <i class="fas fa-download"></i> Exporter les résultats
        </button>
    </div>
</div>

<!-- Footer -->
<footer class="text-center mt-5 text-white bg-dark py-3">
    <div>
        <img src="assets/images/logo-univ.png" style="height: 30px;" alt="Logo Univ">
        <span class="ms-2">BUT Informatique - Le Havre © 2025</span>
    </div>
</footer>
{% endblock %}
